<%- include('partials/header') %>
    <%- include('partials/nav') %>

        <div class="container section" style="margin-top: 4rem;">
            <div style="text-align: center; margin-bottom: 4rem;">
                <h1>About Ella Rises</h1>
                <p style="font-size: 1.2rem; max-width: 800px; margin: 0 auto;">Empowering the next generation of
                    leaders through STEAM education, mentorship, and cultural pride.</p>
            </div>

            <div class="grid" style="grid-template-columns: 1fr 1fr; align-items: center; gap: 4rem;">
                <div>
                    <img src="/images/logo.png" alt="Ella Rises Logo"
                        style="width: 100%; border-radius: 16px; box-shadow: var(--shadow);">
                </div>
                <div>
                    by providing access to STEAM (Science, Technology, Engineering, Arts,
                    and Mathematics) education, leadership training, and a supportive community, we can help break
                    down barriers and create a brighter future.</p>

                    <h3 style="margin-top: 2rem;">What We Do</h3>
                    <ul style="list-style: disc; padding-left: 1.5rem; color: var(--text-secondary);">
                        <li style="margin-bottom: 0.5rem;">Host interactive workshops and seminars.</li>
                        <li style="margin-bottom: 0.5rem;">Connect students with professional mentors.</li>
                        <li style="margin-bottom: 0.5rem;">Celebrate cultural heritage and identity.</li>
                        <li style="margin-bottom: 0.5rem;">Provide resources for college and career readiness.</li>
                    </ul>
                </div>
            </div>

            <!-- Team Section -->
            <div class="section team-section">
                <div style="text-align: center; margin-bottom: 4rem;">
                    <h2 style="color: #FFFFFF;">Meet the Team</h2>
                    <p style="max-width: 600px; margin: 0 auto; color: #F0F0F0;">Our dedicated team of leaders working
                        to empower the
                        next generation.</p>
                </div>

                <!-- Directors (Top Row) -->
                <div class="directors-grid">
                    <div class="team-card">
                        <div class="team-img-container">
                            <img src="/images/team/nadia_cates.jpg" alt="Nadia Cates">
                        </div>
                        <h3>Nadia Cates</h3>
                        <p class="role">Founder and <br> Executive Director</p>
                    </div>
                    <div class="team-card">
                        <div class="team-img-container">
                            <img src="/images/team/claudia_barillas.jpg" alt="Claudia Barillas">
                        </div>
                        <h3>Claudia Barillas</h3>
                        <p class="role">Program Director</p>
                    </div>
                </div>

                <!-- Board Members (Grid of 4) -->
                <h3 class="board-title">Board of Directors</h3>
                <div class="board-grid">
                    <!-- Row 1 -->
                    <div class="team-card">
                        <div class="team-img-container">
                            <img src="/images/team/emma_guapo.jpg" alt="Emma Guapo">
                        </div>
                        <h3>Emma Guapo</h3>
                        <p class="role">Chair of the Board</p>
                    </div>
                    <div class="team-card">
                        <div class="team-img-container">
                            <img src="/images/team/dennia_gayle.jpg" alt="Dennia Gayle">
                        </div>
                        <h3>Dennia Gayle</h3>
                        <p class="role">Vice Chair</p>
                    </div>
                    <div class="team-card">
                        <div class="team-img-container">
                            <img src="/images/team/bert_barillas.jpg" alt="Bert Barillas">
                        </div>
                        <h3>Bert Barillas</h3>
                        <p class="role">Secretary</p>
                    </div>
                    <div class="team-card">
                        <div class="team-img-container">
                            <img src="/images/team/rogelio_osuna.jpg" alt="Rogelio Osuna">
                        </div>
                        <h3>Rogelio Osuna</h3>
                        <p class="role">Treasurer</p>
                    </div>

                    <!-- Row 2 -->
                    <div class="team-card">
                        <div class="team-img-container">
                            <img src="/images/team/zachariah_parry.jpg" alt="Zachariah Parry">
                        </div>
                        <h3>Zachariah Parry</h3>
                        <p class="role">Board Member</p>
                    </div>
                    <div class="team-card">
                        <div class="team-img-container">
                            <img src="/images/team/shawn_cates.jpg" alt="Shawn Cates">
                        </div>
                        <h3>Shawn Cates</h3>
                        <p class="role">Board Member</p>
                    </div>
                    <div class="team-card">
                        <div class="team-img-container">
                            <img src="/images/team/kathy_larrabee.jpg" alt="Kathy Larrabee">
                        </div>
                        <h3>Kathy Larrabee</h3>
                        <p class="role">Board Member</p>
                    </div>
                    <div class="team-card">
                        <div class="team-img-container">
                            <img src="/images/team/rick_heizer.jpg" alt="Rick Heizer">
                        </div>
                        <h3>Rick Heizer</h3>
                        <p class="role">Board Member</p>
                    </div>
                </div>
            </div>

            <div class="section" style="text-align: center; margin-top: 4rem;">
                <h2>Join Our Movement</h2>
                <p>Whether you are a student, a professional, or a supporter, there is a place for you at Ella Rises.
                </p>
                <div style="margin-top: 2rem; display: flex; justify-content: center; gap: 1rem;">
                    <a href="/donate" class="btn btn-primary">Donate Now</a>
                    <% if (!user) { %>
                        <a href="/login" class="btn btn-outline">Join Us</a>
                        <% } %>
                </div>
            </div>
        </div>

        <%- include('partials/footer') %>
