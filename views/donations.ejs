<%- include('partials/header') %>
    <%- include('partials/nav') %>

        <div class="container section" style="margin-top: 4rem;">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
                <h1>Donations</h1>
                <% if (user && user.role==='Manager' ) { %>
                    <button onclick="document.getElementById('addDonationModal').style.display='block'"
                        class="btn btn-primary">Add Donation</button>
                    <% } %>
            </div>

            <form action="/donations" method="GET" style="margin-bottom: 2rem; display: flex; gap: 1rem;">
                <input type="text" name="search" placeholder="Search by donor name..."
                    value="<%= typeof search !== 'undefined' ? search : '' %>" style="flex: 1;">
                <button type="submit" class="btn btn-outline">Search</button>
                <% if (typeof search !=='undefined' && search) { %>
                    <a href="/donations" class="btn btn-outline">Clear</a>
                    <% } %>
            </form>

            <div class="card">
                <table>
                    <thead>
                        <tr>
                            <th>Donor Name</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Message</th>
                            <% if (user && user.role==='Manager' ) { %>
                                <th>Actions</th>
                                <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% donations.forEach(d=> { %>
                            <tr>
                                <td>
                                    <%= d.donor_name %>
                                </td>
                                <td>$<%= d.amount %>
                                </td>
                                <td>
                                    <%= new Date(d.date).toLocaleDateString() %>
                                </td>
                                <td>
                                    <%= d.message %>
                                </td>
                                <% if (user && user.role==='Manager' ) { %>
                                    <td>
                                        <div style="display: flex; gap: 0.5rem;">
                                            <button
                                                onclick="editDonation('<%= d.id %>', '<%= d.donor_name %>', '<%= d.amount %>', '<%= d.date %>', '<%= d.message %>')"
                                                class="btn btn-outline"
                                                style="padding: 0.4rem 0.8rem; font-size: 0.8rem;">Edit</button>
                                            <form action="/donations/delete/<%= d.id %>" method="POST"
                                                onsubmit="return confirm('Are you sure?');" style="display: inline;">
                                                <button type="submit" class="btn btn-primary"
                                                    style="padding: 0.4rem 0.8rem; font-size: 0.8rem; background-color: #ff4444; border-color: #ff4444;">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                    <% } %>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <% if (user && user.role==='Manager' ) { %>
            <!-- Add Donation Modal -->
            <div id="addDonationModal"
                style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 2000;">
                <div class="form-container" style="margin: 10vh auto; position: relative;">
                    <span onclick="document.getElementById('addDonationModal').style.display='none'"
                        style="position: absolute; top: 1rem; right: 1rem; cursor: pointer; font-size: 1.5rem;">&times;</span>
                    <h2 style="text-align: center; margin-bottom: 2rem;">Add Donation</h2>
                    <form action="/donations/add" method="POST">
                        <div class="form-group">
                            <label for="donor_name">Donor Name</label>
                            <input type="text" name="donor_name" required>
                        </div>
                        <div class="form-group">
                            <label for="amount">Amount</label>
                            <input type="number" name="amount" step="0.01" required>
                        </div>
                        <div class="form-group">
                            <label for="date">Date</label>
                            <input type="date" name="date" required>
                        </div>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <input type="text" name="message">
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Add Donation</button>
                    </form>
                </div>
            </div>

            <!-- Edit Donation Modal -->
            <div id="editDonationModal"
                style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 2000;">
                <div class="form-container" style="margin: 10vh auto; position: relative;">
                    <span onclick="document.getElementById('editDonationModal').style.display='none'"
                        style="position: absolute; top: 1rem; right: 1rem; cursor: pointer; font-size: 1.5rem;">&times;</span>
                    <h2 style="text-align: center; margin-bottom: 2rem;">Edit Donation</h2>
                    <form id="editDonationForm" action="" method="POST">
                        <div class="form-group">
                            <label for="edit_donor_name">Donor Name</label>
                            <input type="text" id="edit_donor_name" name="donor_name" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_amount">Amount</label>
                            <input type="number" id="edit_amount" name="amount" step="0.01" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_date">Date</label>
                            <input type="date" id="edit_date" name="date" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_message">Message</label>
                            <input type="text" id="edit_message" name="message">
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Update Donation</button>
                    </form>
                </div>
            </div>

            <script>
                function editDonation(id, donor_name, amount, date, message) {
                    document.getElementById('editDonationForm').action = '/donations/edit/' + id;
                    document.getElementById('edit_donor_name').value = donor_name;
                    document.getElementById('edit_amount').value = amount;
                    const d = new Date(date);
                    const dateString = d.toISOString().split('T')[0];
                    document.getElementById('edit_date').value = dateString;
                    document.getElementById('edit_message').value = message;
                    document.getElementById('editDonationModal').style.display = 'block';
                }
            </script>
            <% } %>

                <%- include('partials/footer') %>