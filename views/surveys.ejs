<%- include('partials/header') %>
    <%- include('partials/nav') %>
        <%- include('partials/aesthetic-bg') %>

            <div class="container section" style="margin-top: 4rem;">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
                    <h1>Survey Submissions</h1>
                    <% if (user && user.role==='Manager' ) { %>
                        <button onclick="openModal()" class="btn btn-primary">Add Submission</button>
                        <% } %>
                </div>

                <!-- Search Form -->
                <form action="/surveys" method="GET"
                    style="margin-bottom: 2rem; display: flex; gap: 1rem; align-items: center;">
                    <div class="aesthetic-search">
                        <input type="text" name="search" placeholder="Search by participant name..."
                            value="<%= typeof search !== 'undefined' ? search : '' %>">
                        <button type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                            </svg>
                        </button>
                    </div>
                    <% if (typeof search !=='undefined' && search) { %>
                        <a href="/surveys" class="btn btn-outline"
                            style="padding: 0.5rem 1rem; text-decoration: none; border-radius: 50px;">Clear</a>
                        <% } %>
                </form>

                <!-- Surveys Table -->
                <div class="card" style="padding: 0; overflow: hidden; border: none; background: transparent;">
                    <table class="aesthetic-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Participant</th>
                                <th>Satisfaction</th>
                                <th>Overall</th>
                                <th>Date</th>
                                <% if (user && user.role==='Manager' ) { %>
                                    <th>Actions</th>
                                    <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% surveys.forEach(s=> { %>
                                <tr>
                                    <td>
                                        <%= s.surveyid %>
                                    </td>
                                    <td>
                                        <% if (s.participantfirstname) { %>
                                            <%= s.participantfirstname %>
                                                <%= s.participantlastname %>
                                                    <% } else { %>
                                                        <em>Anonymous/Unlinked</em>
                                                        <% } %>
                                    </td>
                                    <td>
                                        <%= s.surveysatisfactionscore %>
                                    </td>
                                    <td>
                                        <%= s.surveyoverallscore %>
                                    </td>
                                    <td>
                                        <%= new Date(s.surveysubmissiondate).toLocaleDateString() %>
                                    </td>
                                    <% if (user && user.role==='Manager' ) { %>
                                        <td>
                                            <div style="display: flex; gap: 0.5rem;">
                                                <button onclick="editSurvey('<%= s.surveyid %>')"
                                                    class="btn btn-outline"
                                                    style="padding: 0.4rem 0.8rem; font-size: 0.8rem; border-radius: 20px;">Edit</button>
                                                <form action="/surveys/delete/<%= s.surveyid %>" method="POST"
                                                    onsubmit="return confirm('Are you sure?');"
                                                    style="display: inline;">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <button type="submit" class="btn btn-primary"
                                                        style="padding: 0.4rem 0.8rem; font-size: 0.8rem; background-color: #ff4444; border-color: #ff4444; border-radius: 20px;">Delete</button>
                                                </form>
                                            </div>
                                        </td>
                                        <% } %>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Add Survey Modal -->
            <div id="addSurveyModal" class="modal"
                style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 2000; overflow-y: auto;">
                <div class="form-container"
                    style="margin: 5vh auto; position: relative; background: white; padding: 2rem; border-radius: 8px; max-width: 600px;">
                    <span onclick="document.getElementById('addSurveyModal').style.display='none'"
                        style="position: absolute; top: 1rem; right: 1rem; cursor: pointer; font-size: 1.5rem;">&times;</span>
                    <h2 style="text-align: center; margin-bottom: 2rem;">Add Survey Submission</h2>
                    <form action="/surveys/add" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label>Participant</label>
                            <select name="participantid" required
                                style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                                <option value="">Select Participant</option>
                                <% participants.forEach(p=> { %>
                                    <option value="<%= p.participantid %>">
                                        <%= p.participantfirstname %>
                                            <%= p.participantlastname %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-group" style="margin-top: 1rem;">
                            <label>Date</label>
                            <input type="date" name="surveydate" required
                                style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                        </div>
                        <div class="form-group" style="margin-top: 1rem;">
                            <label>Satisfaction Score (1-5)</label>
                            <input type="number" name="surveysatisfactionscore" min="1" max="5" required
                                style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                        </div>
                        <div class="form-group" style="margin-top: 1rem;">
                            <label>Comments</label>
                            <textarea name="surveycomments" rows="3"
                                style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 2rem;">Add
                            Survey</button>
                    </form>
                </div>
            </div>

            <!-- Edit Survey Modal -->
            <div id="editSurveyModal" class="modal"
                style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 2000; overflow-y: auto;">
                <div class="form-container"
                    style="margin: 5vh auto; position: relative; background: white; padding: 2rem; border-radius: 8px; max-width: 600px;">
                    <span onclick="document.getElementById('editSurveyModal').style.display='none'"
                        style="position: absolute; top: 1rem; right: 1rem; cursor: pointer; font-size: 1.5rem;">&times;</span>
                    <h2 style="text-align: center; margin-bottom: 2rem;">Edit Survey Submission</h2>
                    <form id="editSurveyForm" action="" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label>Participant</label>
                            <select id="edit_participantid" name="participantid" required
                                style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                                <option value="">Select Participant</option>
                                <% participants.forEach(p=> { %>
                                    <option value="<%= p.participantid %>">
                                        <%= p.participantfirstname %>
                                            <%= p.participantlastname %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-group" style="margin-top: 1rem;">
                            <label>Date</label>
                            <input type="date" id="edit_surveydate" name="surveydate" required
                                style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                        </div>
                        <div class="form-group" style="margin-top: 1rem;">
                            <label>Satisfaction Score (1-5)</label>
                            <input type="number" id="edit_surveysatisfactionscore" name="surveysatisfactionscore"
                                min="1" max="5" required style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                        </div>
                        <div class="form-group" style="margin-top: 1rem;">
                            <label>Comments</label>
                            <textarea id="edit_surveycomments" name="surveycomments" rows="3"
                                style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 2rem;">Update
                            Survey</button>
                    </form>
                </div>
            </div>

            <script>
                const surveysData = <% - JSON.stringify(surveys) %>;

                function openModal() {
                    document.getElementById('surveyModal').style.display = 'block';
                    document.getElementById('modalTitle').innerText = 'Add Submission';
                    document.getElementById('surveyForm').action = '/surveys/add';
                    document.getElementById('surveyForm').reset();
                    document.querySelector('input[name="surveysubmissiondate"]').valueAsDate = new Date();
                }

                function closeModal() {
                    document.getElementById('surveyModal').style.display = 'none';
                }

                function editSurvey(id) {
                    const s = surveysData.find(s => s.surveyid == id);
                    if (!s) return;

                    document.getElementById('surveyModal').style.display = 'block';
                    document.getElementById('modalTitle').innerText = 'Edit Submission';
                    document.getElementById('surveyForm').action = `/surveys/edit/${s.surveyid}`;

                    const form = document.getElementById('surveyForm');
                    form.participantid.value = s.participantid || '';
                    form.surveysatisfactionscore.value = s.surveysatisfactionscore;
                    form.surveyusefulnessscore.value = s.surveyusefulnessscore;
                    form.surveyinstructorscore.value = s.surveyinstructorscore;
                    form.surveyrecommendationscore.value = s.surveyrecommendationscore;
                    form.surveyoverallscore.value = s.surveyoverallscore;
                    form.surveynpsbucket.value = s.surveynpsbucket || 'Promoter';
                    form.surveycomments.value = s.surveycomments || '';
                    form.surveysubmissiondate.value = s.surveysubmissiondate ? s.surveysubmissiondate.split('T')[0] : '';
                }

                // Close modal if clicked outside
                window.onclick = function (event) {
                    if (event.target == document.getElementById('surveyModal')) {
                        closeModal();
                    }
                }
            </script>

            <%- include('partials/footer') %>