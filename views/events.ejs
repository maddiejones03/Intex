<%- include('partials/header') %>
    <%- include('partials/nav') %>

        <div class="container section" style="margin-top: 4rem;">
            <h1>Events Management</h1>

            <!-- Occurrences Section -->
            <div style="margin-top: 2rem;">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                    <h2>Upcoming Occurrences</h2>
                    <% if (user && user.role==='Manager' ) { %>
                        <button onclick="openOccurrenceModal()" class="btn btn-primary">Schedule Occurrence</button>
                        <% } %>
                </div>

                <div class="card">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="text-align: left; border-bottom: 1px solid #eee;">
                                <th style="padding: 1rem;">Start</th>
                                <th style="padding: 1rem;">End</th>
                                <th style="padding: 1rem;">Event Name</th>
                                <th style="padding: 1rem;">Type</th>
                                <th style="padding: 1rem;">Location</th>
                                <th style="padding: 1rem;">Capacity</th>
                                <th style="padding: 1rem;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% occurrences.forEach(o=> { %>
                                <tr style="border-bottom: 1px solid #eee;">
                                    <td style="padding: 1rem;">
                                        <%= new Date(o.eventdatetimestart).toLocaleString() %>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <%= o.eventdatetimeend ? new Date(o.eventdatetimeend).toLocaleString() : '-' %>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <%= o.eventname %>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <%= o.eventtype %>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <%= o.eventlocation %>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <%= o.eventcapacity %>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <% if (user && user.role==='Manager' ) { %>
                                            <div style="display: flex; gap: 0.5rem;">
                                                <button onclick="editOccurrence('<%= o.eventoccurrenceid %>')"
                                                    class="btn btn-outline"
                                                    style="padding: 0.4rem 0.8rem; font-size: 0.8rem;">Edit</button>
                                                <form action="/events/occurrences/delete/<%= o.eventoccurrenceid %>"
                                                    method="POST" onsubmit="return confirm('Are you sure?');"
                                                    style="display: inline;">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <button type="submit" class="btn btn-primary"
                                                        style="padding: 0.4rem 0.8rem; font-size: 0.8rem; background-color: #ff4444; border-color: #ff4444;">Delete</button>
                                                </form>
                                            </div>
                                            <% } else { %>
                                                <form action="/events/register" method="POST" style="display: inline;">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <input type="hidden" name="eventoccurrenceid"
                                                        value="<%= o.eventoccurrenceid %>">
                                                    <button type="submit" class="btn btn-primary"
                                                        style="padding: 0.4rem 0.8rem; font-size: 0.8rem;">Register</button>
                                                </form>
                                                <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Templates Section -->
            <div style="margin-top: 4rem;">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                    <h2>Event Templates</h2>
                    <% if (user && user.role==='Manager' ) { %>
                        <button onclick="openTemplateModal()" class="btn btn-primary">Add Template</button>
                        <% } %>
                </div>

                <div class="card">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="text-align: left; border-bottom: 1px solid #eee;">
                                <th style="padding: 1rem;">Name</th>
                                <th style="padding: 1rem;">Type</th>
                                <th style="padding: 1rem;">Description</th>
                                <% if (user && user.role==='Manager' ) { %>
                                    <th style="padding: 1rem;">Actions</th>
                                    <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% templates.forEach(t=> { %>
                                <tr style="border-bottom: 1px solid #eee;">
                                    <td style="padding: 1rem;">
                                        <%= t.eventname %>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <%= t.eventtype %>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <%= t.eventdescription %>
                                    </td>
                                    <% if (user && user.role==='Manager' ) { %>
                                        <td style="padding: 1rem;">
                                            <div style="display: flex; gap: 0.5rem;">
                                                <button onclick="editTemplate('<%= t.eventtemplateid %>')"
                                                    class="btn btn-outline"
                                                    style="padding: 0.4rem 0.8rem; font-size: 0.8rem;">Edit</button>
                                                <form action="/events/templates/delete/<%= t.eventtemplateid %>"
                                                    method="POST" onsubmit="return confirm('Are you sure?');"
                                                    style="display: inline;">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <button type="submit" class="btn btn-primary"
                                                        style="padding: 0.4rem 0.8rem; font-size: 0.8rem; background-color: #ff4444; border-color: #ff4444;">Delete</button>
                                                </form>
                                            </div>
                                        </td>
                                        <% } %>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Occurrence Modal -->
        <div id="occurrenceModal" class="modal"
            style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000;">
            <div class="modal-content"
                style="background: white; margin: 5% auto; padding: 2rem; width: 90%; max-width: 500px; border-radius: 8px; position: relative;">
                <span onclick="closeOccurrenceModal()"
                    style="position: absolute; right: 1rem; top: 1rem; cursor: pointer; font-size: 1.5rem;">&times;</span>
                <h2 id="occurrenceModalTitle" style="margin-bottom: 1.5rem;">Schedule Occurrence</h2>
                <form id="occurrenceForm" action="/events/occurrences/add" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                        <label>Event Template</label>
                        <select name="eventtemplateid" required
                            style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                            <option value="">-- Select Template --</option>
                            <% templates.forEach(t=> { %>
                                <option value="<%= t.eventtemplateid %>">
                                    <%= t.eventname %> (<%= t.eventtype %>)
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="form-group" style="margin-top: 1rem;">
                        <label>Start Date & Time</label>
                        <input type="datetime-local" name="eventdatetimestart" required
                            style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                    </div>
                    <div class="form-group" style="margin-top: 1rem;">
                        <label>End Date & Time</label>
                        <input type="datetime-local" name="eventdatetimeend"
                            style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                    </div>
                    <div class="form-group" style="margin-top: 1rem;">
                        <label>Location</label>
                        <input type="text" name="eventlocation" required
                            style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                    </div>
                    <div class="form-group" style="margin-top: 1rem;">
                        <label>Capacity</label>
                        <input type="number" name="eventcapacity" required
                            style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                    </div>
                    <div class="form-group" style="margin-top: 1rem;">
                        <label>Registration Deadline</label>
                        <input type="date" name="eventregistrationdeadline"
                            style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                    </div>
                    <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 2rem;">Save</button>
                </form>
            </div>
        </div>

        <!-- Template Modal -->
        <div id="templateModal" class="modal"
            style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000;">
            <div class="modal-content"
                style="background: white; margin: 5% auto; padding: 2rem; width: 90%; max-width: 500px; border-radius: 8px; position: relative;">
                <span onclick="closeTemplateModal()"
                    style="position: absolute; right: 1rem; top: 1rem; cursor: pointer; font-size: 1.5rem;">&times;</span>
                <h2 id="templateModalTitle" style="margin-bottom: 1.5rem;">Add Template</h2>
                <form id="templateForm" action="/events/templates/add" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                        <label>Event Name</label>
                        <input type="text" name="eventname" required
                            style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                    </div>
                    <div class="form-group" style="margin-top: 1rem;">
                        <label>Type</label>
                        <input type="text" name="eventtype" required
                            style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;">
                    </div>
                    <div class="form-group" style="margin-top: 1rem;">
                        <label>Description</label>
                        <textarea name="eventdescription" rows="3"
                            style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 2rem;">Save</button>
                </form>
            </div>
        </div>

        <script>
            const occurrencesData = <% - JSON.stringify(occurrences) %>;
            const templatesData = <% - JSON.stringify(templates) %>;

            // Occurrence Modal Functions
            function openOccurrenceModal() {
                document.getElementById('occurrenceModal').style.display = 'block';
                document.getElementById('occurrenceModalTitle').innerText = 'Schedule Occurrence';
                document.getElementById('occurrenceForm').action = '/events/occurrences/add';
                document.getElementById('occurrenceForm').reset();
            }

            function closeOccurrenceModal() {
                document.getElementById('occurrenceModal').style.display = 'none';
            }

            function editOccurrence(id) {
                const o = occurrencesData.find(o => o.eventoccurrenceid == id);
                if (!o) return;

                document.getElementById('occurrenceModal').style.display = 'block';
                document.getElementById('occurrenceModalTitle').innerText = 'Edit Occurrence';
                document.getElementById('occurrenceForm').action = `/events/occurrences/edit/${o.eventoccurrenceid}`;

                const form = document.getElementById('occurrenceForm');
                form.eventtemplateid.value = o.eventtemplateid;
                form.eventdatetimestart.value = o.eventdatetimestart ? o.eventdatetimestart.slice(0, 16) : '';
                form.eventdatetimeend.value = o.eventdatetimeend ? o.eventdatetimeend.slice(0, 16) : '';
                form.eventlocation.value = o.eventlocation;
                form.eventcapacity.value = o.eventcapacity;
                form.eventregistrationdeadline.value = o.eventregistrationdeadline ? o.eventregistrationdeadline.split('T')[0] : '';
            }

            // Template Modal Functions
            function openTemplateModal() {
                document.getElementById('templateModal').style.display = 'block';
                document.getElementById('templateModalTitle').innerText = 'Add Template';
                document.getElementById('templateForm').action = '/events/templates/add';
                document.getElementById('templateForm').reset();
            }

            function closeTemplateModal() {
                document.getElementById('templateModal').style.display = 'none';
            }

            function editTemplate(id) {
                const t = templatesData.find(t => t.eventtemplateid == id);
                if (!t) return;

                document.getElementById('templateModal').style.display = 'block';
                document.getElementById('templateModalTitle').innerText = 'Edit Template';
                document.getElementById('templateForm').action = `/events/templates/edit/${t.eventtemplateid}`;

                const form = document.getElementById('templateForm');
                form.eventname.value = t.eventname;
                form.eventtype.value = t.eventtype;
                form.eventdescription.value = t.eventdescription || '';
            }

            // Close modals if clicked outside
            window.onclick = function (event) {
                if (event.target == document.getElementById('occurrenceModal')) {
                    closeOccurrenceModal();
                }
                if (event.target == document.getElementById('templateModal')) {
                    closeTemplateModal();
                }
            }
        </script>

        <%- include('partials/footer') %>