<%- include('partials/header') %>
    <%- include('partials/nav') %>

        <div class="donation-split">
            <!-- Left Column: Image (Pink Background) -->
            <div class="donation-image-container">
                <img src="/images/donation_hero.png" alt="Ella Rises Donation Art">
            </div>

            <!-- Right Column: Form (White Background) -->
            <div class="donation-form-container">
                <div class="donation-header">
                    <div class="secure-badge">
                        <i class="fas fa-lock"></i> Secure Donation
                    </div>
                    <h1>Rise With Ella: Empowering Futures Together</h1>
                    <p>We believe in the power of community and the brilliance of our youth.</p>
                </div>

                <% if (typeof success !=='undefined' && success) { %>
                    <div style="color: #4caf50; text-align: center; margin-bottom: 1rem; font-weight: bold;">Thank you
                        for your donation!</div>
                    <% } %>

                        <form action="/donate" method="POST" id="donationForm">
                            <input type="hidden" name="frequency" id="frequencyInput" value="One-time">

                            <div class="frequency-toggle">
                                <button type="button" class="freq-btn active" data-value="One-time">One-time</button>
                                <button type="button" class="freq-btn" data-value="Monthly">Monthly</button>
                                <button type="button" class="freq-btn" data-value="Quarterly">Quarterly</button>
                                <button type="button" class="freq-btn" data-value="Yearly">Yearly</button>
                            </div>

                            <label class="form-label">Choose amount</label>
                            <div class="amount-grid">
                                <button type="button" class="amount-btn" data-amount="1000">$1,000</button>
                                <button type="button" class="amount-btn" data-amount="500">$500</button>
                                <button type="button" class="amount-btn" data-amount="250">$250</button>
                                <button type="button" class="amount-btn" data-amount="100">$100</button>
                                <button type="button" class="amount-btn" data-amount="55">$55</button>
                                <button type="button" class="amount-btn" data-amount="25">$25</button>
                            </div>

                            <div class="custom-amount">
                                <span class="currency-symbol">$</span>
                                <input type="number" id="amount" name="amount" placeholder="Other" step="0.01" min="1">
                                <span class="currency-code">USD</span>
                            </div>

                            <div class="form-group">
                                <label for="donor_name" class="form-label">Full Name</label>
                                <input type="text" id="donor_name" name="donor_name" placeholder="Jane Doe" required
                                    style="background-color: #F5F5F5;">
                            </div>

                            <div class="form-check" style="margin-bottom: 1.5rem;">
                                <input class="form-check-input" type="checkbox" id="addMessage">
                                <label class="form-check-label" for="addMessage">
                                    Add note/comment
                                </label>
                            </div>

                            <div class="form-group" id="messageGroup" style="display: none;">
                                <input type="text" id="message" name="message" placeholder="Your message..."
                                    class="form-control">
                            </div>

                            <button type="submit" class="btn btn-primary"
                                style="width: 100%; margin-top: 1rem; background-color: var(--accent-color); border: none;">Continue</button>
                        </form>
            </div>
        </div>

        <script>

            // Frequency Toggle
            const freqBtns = document.querySelectorAll('.freq-btn');
            const frequencyInput = document.getElementById('frequencyInput');

            freqBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    // Remove active class from all
                    freqBtns.forEach(b => b.classList.remove('active'));
                    // Add active class to clicked
                    btn.classList.add('active');
                    // Update hidden input
                    frequencyInput.value = btn.getAttribute('data-value');
                });
            });

            // Amount Selection
            const amountBtns = document.querySelectorAll('.amount-btn');
            const amountInput = document.getElementById('amount');

            amountBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    // Remove active class from all
                    amountBtns.forEach(b => b.classList.remove('active'));
                    // Add active class to clicked
                    btn.classList.add('active');
                    // Update input value
                    amountInput.value = btn.getAttribute('data-amount');
                });
            });

            // Custom Amount Input
            amountInput.addEventListener('input', () => {
                // Remove active class from buttons when typing custom amount
                amountBtns.forEach(btn => btn.classList.remove('active'));
            });

            // Message Toggle
            const addMessageCheckbox = document.getElementById('addMessage');
            const messageGroup = document.getElementById('messageGroup');

            addMessageCheckbox.addEventListener('change', function () {
                if (this.checked) {
                    messageGroup.style.display = 'block';
                } else {
                    messageGroup.style.display = 'none';
                }
            });
        </script>

        <%- include('partials/footer') %>
