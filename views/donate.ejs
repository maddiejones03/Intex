<%- include('partials/header') %>
    <%- include('partials/nav') %>

        <div class="container section" style="margin-top: 4rem;">
            <div class="form-container">
                <h2 style="text-align: center; margin-bottom: 2rem;">Make a Donation</h2>
                <p style="text-align: center; margin-bottom: 2rem;">Support our mission to empower Latina youth.</p>

                <% if (typeof success !=='undefined' && success) { %>
                    <div style="color: #4caf50; text-align: center; margin-bottom: 1rem;">Thank you for your donation!
                    </div>
                    <% } %>

                        <form action="/donate" method="POST">
                            <div class="form-group">
                                <label for="donor_name">Full Name</label>
                                <input type="text" id="donor_name" name="donor_name" placeholder="Jane Doe" required>
                            </div>
                            <div class="form-group">
                                <label for="amount">Amount ($)</label>
                                <input type="number" id="amount" name="amount" placeholder="50.00" step="0.01" min="1"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="message">Message (Optional)</label>
                                <input type="text" id="message" name="message" placeholder="Keep up the great work!">
                            </div>
                            <button type="submit" class="btn btn-primary" style="width: 100%;">Donate Now</button>
                        </form>
            </div>
        </div>

        <%- include('partials/footer') %>