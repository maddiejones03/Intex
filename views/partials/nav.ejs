<header>
    <div class="container">
        <nav>
            <a href="/" class="logo">
                <img src="/images/logonobg.png" alt="Ella Rises">
                <span>Ella Rises</span>
            </a>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/about"
                    class="<%= typeof title !== 'undefined' && title === 'About Us' ? 'active' : '' %>">About</a>
                <a href="/programs"
                    class="<%= typeof title !== 'undefined' && title === 'Programs' ? 'active' : '' %>">Programs</a>
                <a href="/donate"
                    class="<%= typeof title !== 'undefined' && title === 'Donate' ? 'active' : '' %>">Donate</a>

                <% if (typeof user !=='undefined' && user) { %>
                    <!-- Logged In Users -->
                    <div class="dropdown">
                        <a href="#" class="dropbtn">Records ▾</a>
                        <div class="dropdown-content">
                            <a href="/events">Events</a>
                            <a href="/participants">Participants</a>
                            <a href="/surveys">Surveys</a>
                            <a href="/milestones">Milestones</a>
                            <a href="/register">Register</a>
                            <a href="/donations">Donations</a>
                        </div>
                    </div>

                    <% if (user.role==='Manager' ) { %>
                        <!-- Manager Only -->
                        <div class="dropdown">
                            <a href="#" class="dropbtn">Admin ▾</a>
                            <div class="dropdown-content">
                                <a href="/dashboard">Dashboard</a>
                                <a href="/users">Users</a>
                                <a href="/organizations">Organizations</a>
                                <a href="/grants">Grants</a>
                            </div>
                        </div>
                        <% } %>

                            <a href="/logout" class="btn btn-primary">Logout</a>
                            <% } else { %>
                                <!-- Visitor -->
                                <a href="/login" class="btn btn-primary">Login</a>
                                <% } %>
            </div>
        </nav>
    </div>
</header>